{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<h2>Les derniers articles sortie</h2>
    <div class="container">
        <div class="row">
            {% for news in lastNews %}
                <div class="col-md-3 mt-3 mb-3">
                        <div class="card">
                            <img src="{{news.image}}" alt="">
                            <div class="card-body">
                                <h5 class="card-title">{{news.title}}</h5>
                                <p class="card-text">{{news.content | u.truncate (100, "...")}}</p>
                                <p class="card-text">Ecrit par {{news.user.lastName}} {{news.user.firstName}} {{news.createdAt | ago}}</p>
                                <a href="/post/{{news.id}}" class="btn btn-primary">Lire l'article...</a>
                            </div>
                        </div>
                    </div> 
            {% endfor %}             
        </div>
    </div>



       
{% endblock %}
